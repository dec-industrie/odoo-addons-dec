<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="company_form_view" >
        <field name="name">res.company.form@company_report</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="company_registry" position="after">
                <field name="report_footer" string="Footer" placeholder="e.g. Opening hours, bank accounts (one per line)" />
                <field name="report_bank_footer"/>
            </field>
        </field>
    </record>

</odoo>
