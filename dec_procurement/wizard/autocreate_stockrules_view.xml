<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_autocreate_stockrules" model="ir.ui.view">
            <field name="name">Autocreate stock rules</field>
            <field name="model">procurement.autocreatestockrules</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
               <form string="Autocreate stock ruless">
                    <separator string="Are you sure you want to create a default minimum stock rule for these products ?" colspan="4"/>
                       <newline/>
                    <label string="
Please note that: &#10; &#10;
These rules are the default ones: &#10;
* Minimum quantity will be set to 0 &#10;
* Maximum quantity will be set to 0 &#10;
" colspan="4"/>                
                    <newline/>                    
                    <separator string="" colspan="4" />
                    <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    <button name="create_rules" string="Create rules" type="object" icon="gtk-convert"/>
                </form>
            </field>
        </record>

        <act_window name="Auto create stock rules"
            context="{'search_default_draft': 1, 'search_default_approved': False}"
            res_model="procurement.autocreatestockrules"
            src_model="procurement.order"
            view_mode="form"
            target="new"
            multi="True"        
            key2="client_action_multi"    
            groups="base.group_extended"
            id="action_procurement_autocreate_stockrules"/>    
                        
    </data>
</openerp>

