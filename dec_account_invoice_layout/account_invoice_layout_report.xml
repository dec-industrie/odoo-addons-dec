<?xml version="1.0"?>
<openerp>
    <data>
    
<!--    <delete model="ir.actions.report.xml" search="[('report_name','=','account.invoice')]"/>-->
<!--    <delete model="ir.actions.report.xml" search="[('report_name','=','account.invoice.layout')]"/>-->
<!--    <delete model="ir.actions.report.xml" search="[('report_name','=','account.invoice.layout.dec')]"/>-->

	    <delete model="ir.actions.report.xml" id="account.account_invoices"/>
	    <delete model="ir.actions.report.xml" id="account_invoice_layout.account_invoices_1"/>
	    <delete model="ir.actions.report.xml" id="account_invoice_layout.account_invoices_layout_message"/>
	    <delete model="ir.values" id="account_invoice_layout.account_invoice_special_msg_values"/>
	    	
	    <report id="account_invoices_1_dec"
	            string="Invoices"
	            model="account.invoice"
	            name="account.invoice.layout.dec"
	            rml="dec_account_invoice_layout/report/report_account_invoice_layout.rml"
	            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
	            attachment_use="True"
	            usage="default"
	            auto="False"/>
	            
	    <delete model="ir.actions.report.xml" id="dec_account_invoice_layout.account_invoices_1_dec"/>
      

    <record id="account_invoice_dec_report_id" model="ir.actions.report.xml">
        <field name="name">Facture/Avoir</field>
        <field name="type">ir.actions.report.xml</field>
        <field name="model">account.invoice</field>
        <field name="report_name">service_print_invoice</field>
        <field name="report_type">aeroo</field>
        <field name="in_format">oo-odt</field>
        <field name="out_format" search="[('code', '=', 'oo-pdf')]"/>
        <field name="parser_loc">dec_account_invoice_layout/report/invoice_parser.py</field>
        <field name="report_rml">dec_account_invoice_layout/report/invoice_report.odt</field>
        <field name="parser_state">loc</field>
        <field name="tml_source">file</field>
        <field name="process_sep">True</field>
        <field name="attachment">(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')</field>
        <field name="attachment_use">False</field>
    </record>

    <ir_set>
        <field name="name">Invoice Report</field>
        <field eval="'action'" name="key"/>
        <field eval="'client_print_multi'" name="key2"/>
        <field eval="['account.invoice']" name="models"/>
        <field eval="'ir.actions.report.xml,'+str(account_invoice_dec_report_id)" name="value"/>
        <field eval="True" name="isobject"/>
        <field eval="True" name="replace"/>
    </ir_set>

	    
    </data>
    
</openerp>
