<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="invoice_custom_report_view" model="ir.ui.view">
            <field name="name">Customize invoice report</field>
            <field name="model">invoice.custom.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select Options">
                    <group colspan="4" col="8">
                        <field name="tax_summary"/>
                        <newline/>
                        <field name="partner_bank_id"/>
                        <newline/>
                    </group>
                    <separator colspan="4"/>
                    <group colspan="4" col="6">
                        <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <label string="" colspan="3"/>
                        <button name="check_report" string="Print report" type="object" icon="gtk-print" context="{'report_type':'invoice'}"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_invoice_custom_report" model="ir.actions.act_window">
            <field name="name">Wizard ...</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.custom.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="invoice_custom_report_view"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="invoice_custom_report_values">
            <field name="model_id" ref="dec_account_invoice_merge.model_account_invoice" />
            <field name="name">Customize invoice report</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_invoice_custom_report'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>

    </data>
</openerp>
