<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="sale_order_form_view">
        <field name="name">sale.order.form@sale_project_traceability</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='state']" position="before">
                <div name="tasks" groups="base.group_no_one" attrs="{'invisible': ['|', ('display_type', '!=', False), ('task_ids', '=', [])]}">
                    <label for="task_ids"/>
                    <field name="task_ids"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>