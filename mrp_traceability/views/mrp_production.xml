<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="mrp_production_form_view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_raw_ids']/tree" position="attributes">
                    <attribute name="class">d_mrp_production</attribute>
                    <attribute name="limit">1000</attribute>
                </xpath>
                <xpath expr="//field[@name='move_raw_ids']/tree" position="inside">
                    <field name="created_purchase_line_id" invisible="1"/>
                    <field name="created_production_id" invisible="1"/>
                    <field name="mrp_status" class="d_mrp_status"/>
                    <button 
                        name="action_view_created_item" 
                        string="Open" 
                        type="object"
                        attrs="{'invisible': [('created_purchase_line_id', '=', False), ('created_production_id', '=', False)]}"
                        icon="fa-external-link">
                    </button>
                    <field name="state" invisible="1"/>
                    <field name="unit_factor">
                        <attribute name="attrs">{'invisible': False}</attribute>
                    </field>
                </xpath>
                <xpath expr="//field[@name='finished_move_line_ids']/tree" position="inside">
                    <field name="state">
                        <attribute name="attrs">{'invisible': False}</attribute>
                    </field>
                </xpath>
                
            </field>
        </record>

        <record model="ir.ui.view" id="stock_move_lots_form_view" >
            <field name="name">stock.move.lots.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="mrp.view_stock_move_lots"/>
            <field name="arch" type="xml">
                <field name="picking_type_id" position="after">
                    <field name="product_uom_qty" string="To Consume"/>
                    <field name="reserved_availability" string="Reserved"/>
                    <field name="quantity_done" string="Consumed" readonly="1"/>
                    <field name="unit_factor"/>
                </field>
                <xpath expr="//field[@name='active_move_line_ids']/tree" position="inside">
                    <field name="state"/>
                    <field name="consume_line_ids"/>
                    <field name="produce_line_ids"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

