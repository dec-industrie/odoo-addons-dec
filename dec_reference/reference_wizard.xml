<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">

    <record model="ir.ui.view" id="refmanager_task_form_view_close">
		<field name="name">ref.task.wizard.form</field>
		<field name="model">ref.task.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
            <form string="REFManager task launcher">
                <label string="Task launched." colspan="4"/>
			</form>
		</field>
	</record>
    
	<record model="ir.ui.view" id="refmanager_task_form_view_open">
		<field name="name">ref.task.wizard.form</field>
		<field name="model">ref.task.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
            <form string="REFManager task launcher">
                <label string="---" colspan="4"/>
				<button type="special" special="cancel"
						string="Cancel" icon="gtk-cancel"/>
				<button type="object" name="action_start_task"
						string="start task" icon="gtk-ok"/>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="refmanager_task_open_wizard">
		<field name="name">refmanager_task_open_wizard</field>
		<field name="res_model">ref.task.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="refmanager_task_form_view_open"/>
		<field name="target">new</field>
	</record>	
   
    <record model="ir.actions.act_window" id="refmanager_task_close_wizard">
		<field name="name">refmanager_task_close_wizard</field>
		<field name="res_model">ref.task.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="refmanager_task_form_view_close"/>
		<field name="target">new</field>
	</record>
    
	<menuitem name="REF Manager" id="ref_manager_menu" parent="base.menu_administration" sequence="100" />
	<menuitem name="Launch task" action="refmanager_task_open_wizard" id="ref_manager_task" parent="ref_manager_menu" sequence="100" />
	
	</data>
</openerp>
