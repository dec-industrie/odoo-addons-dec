<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="picking_form_view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field 
                    name="procure_method" 
                    attrs="{'readonly': [
                        ('|'),
                            ('state', 'in', ['draft', 'cancel', 'partially_available', 'assigned', 'done']),
                            ('procure_method', '==', 'make_to_order'),
                    ]}"
                    force_save="1">
                </field>
                <field name="move_orig_ids"/>
                <field name="move_dest_ids"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="move_picking_form_view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_dest_ids']" position="before">
                <field name="move_orig_ids" groups="base.group_no_one" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>
