                    <field name="stock_move_ids" attrs="{'invisible': [('stock_move_ids', '=', [])]}"/>
                    <field name="purchase_order_ids" attrs="{'invisible': [('purchase_order_ids', '=', [])]}"/>
                    <field name="picking_ids" attrs="{'invisible': [('picking_ids', '=', [])]}"/>
                    <field name="orderpoint_ids" attrs="{'invisible': [('orderpoint_ids', '=', [])]}"/>
                    <field name="stock_rule_ids" attrs="{'invisible': [('stock_rule_ids', '=', [])]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
