<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="product_pack_sale_product_template_form_view">
            <field name="name">product.template.pack.sale.form</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="sales" position="inside">
                    <group name="pack_sales" string="Pack">
                        <field name="fixed_sale_price"/>
                        <field name="sale_pack_line_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </field>
        </record>

        <record model="ir.ui.view" id="product_pack_purchase_product_template_form_view">
            <field name="name">product.template.pack.purchase.form</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="purchase" position="inside">
                    <group name="pack_purchase" string="Pack">
                        <field name="fixed_purchase_price"/>
                        <field name="purchase_pack_line_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </field>
        </record>

    </data>
</odoo>

