<?xml version="1.0"?>
<openerp>
	<data>
	
        <record id="product_search_form_view_dec" model="ir.ui.view">
            <field name="name">product.search.form</field>
            <field name="model">product.product</field>
            <field name="type">search</field>
			<field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
             	<xpath expr="/search/field[@name='categ_id']" position="replace">
                	<field name="categ_id" operator="child_of" groups="base.group_extended"/>
                	<field name="ciel_code"/>  
	                <field name="supplier_code"/>  
                	<field name="procure_method" string="Procure" groups="base.group_extended"/>
                	<field name="supply_method" string="Supply" groups="base.group_extended"/>
                    <newline/>
                	   <group expand="0" string="Warehouse...">
		                	<field name="ean13"/>
		                	<field name="loc_rack"/>
		                	<field name="loc_row"/>
		                	<field name="loc_case"/>
                   	   </group>
                    <newline/>
             	</xpath>
            </field>
        </record>
		
        <record id="product_product_tree_view_dec" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="type">tree</field>
			<field name="inherit_id" ref="product.product_product_tree_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
             	<xpath expr="/tree" position="replace">
	                <tree colors="green:state==False and type=='product' and supply_method=='produce';magenta:state in ('review');gray:state in ('obsolete','end');red:virtual_available&lt;0;blue:virtual_available&gt;=0 and state in ('draft', 'end');black:virtual_available&gt;=0 and state not in ('draft')" string="Products">
	                    <field name="default_code"/>
	                    <field name="name"/>	    
	                    <field name="xml_id" groups="base.group_erp_manager"/>                       
	                    <field name="ciel_code"/>          
	                    <field name="supplier_code"/>      
                		<field name="supply_method" invisible="1"/>
	                    <field name="categ_id" invisible="1"/>
	                    <field name="variants" groups="product.group_product_variant"/>
	                    <field name="uom_id" string="UoM"/>
	                    <field name="type"/>
	                    <field name="qty_available"/>
	                    <field name="virtual_available"/>
	                    <field name="lst_price"/>
	                    <field name="price" invisible="not context.get('pricelist',False)"/>
	                    <field name="standard_price" groups="base.group_extended"/>
	                    <field name="state" groups="base.group_extended"/>
	                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
	                </tree>
             	</xpath>
            </field>
        </record>
        
        <record id="product_normal_form_view_dec" model="ir.ui.view">
            <field name="name">product.normal.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
			<field name="inherit_id" ref="product.product_normal_form_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
             	<xpath expr="/form/group" position="replace">
                   <group colspan="4" col="8">
                    <group colspan="4" col="2">
                        <separator string="Name" colspan="2"/>
                        <field name="name"/>
                        <field groups="product.group_product_variant" name="variants" />
                    </group>
                    <group colspan="1" col="2">
                        <separator string="Codes" colspan="2"/>
	                    <field name="xml_id" groups="base.group_erp_manager"/>  
                        <field name="default_code"/>
                        <field name="ciel_code"/>
                        <field name="supplier_code"/>
                        <field name="ean13" groups="base.group_extended"/>
                    </group>
                    <group colspan="1" col="2">
                        <separator string="Characteristics" colspan="2"/>
                        <field name="sale_ok"/>
                        <field name="purchase_ok"/>
                        <field name="create_date" groups="base.group_erp_manager"/>
                        <field name="create_uid" groups="base.group_erp_manager"/>
                    </group>
                    <group colspan="1" col="1">
                        <field name="product_image" widget='image' nolabel="1"/>
                    </group> 
                   </group>
             	</xpath>
            </field>
        </record>
        
        <record id="product_category_form_view_dec" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="type">form</field>
			<field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">

	            <field name="type" position="after">
	            	<field name="xml_id" />
	            </field>

            </field>
        </record>
		
	</data>
</openerp>
