<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="before">
                <separator string="Sell price" colspan="2"/>
            </field>
            <field name="list_price" position="after">
                <field name="pricelist_bypass" attrs="{'invisible':[('sale_ok','!=',True)]}"/>
                <field name="pricelist_bypass_item" attrs="{'invisible':[('sale_ok','!=',True), ('pricelist_bypass','!=',True)]}" groups="base.group_erp_manager"/>
                <field name="default_sell_price" attrs="{'invisible':[('sale_ok','!=',True)]}"/>
                <label name="price_write_editor" class="o_form_label" groups="base.group_erp_manager" attrs="{'invisible':[('price_write_uid','=',False)]}" >Edited</label>
                <div name="price_write_editor" groups="base.group_erp_manager" attrs="{'invisible':[('price_write_uid','=',False)]}">
                    <field name="price_write_date" nolabel="1" readonly="1"/> by <field name="price_write_uid" nolabel="1" readonly="1"/>
                </div>
            </field>
            <label for="standard_price" position="before">
                <separator string="Cost price and purchase price" colspan="2"/>
            </label>
            <label for="standard_price" position="replace">
                <label name="standard_price" class="o_form_label" groups="base.group_user" 
                    attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"
                    style="min-width: 250px;">
                    Purchase Price (PO) / Cost Price (SO)
                </label>
            </label>
            <div name="standard_price_uom" position="after">
                <label name="default_purchase_price" class="o_form_label" attrs="{'invisible':[('purchase_ok','!=',True)]}">Purchase Prices</label>
                <div name="default_purchase_price" attrs="{'invisible':[('purchase_ok','!=',True)]}">
                    <div>
                        <field name="default_purchase_price_default_uom" nolabel="1"/>
                    </div>
                    <div>
                        <field name="default_purchase_price_purchase_uom" nolabel="1"/>
                    </div>
                </div>
                <label name="standard_price_write_editor" class="o_form_label" groups="base.group_erp_manager" attrs="{'invisible':[('standard_price_write_uid','=',False)]}" >Edited</label>
                <div name="standard_price_write_editor" groups="base.group_erp_manager" attrs="{'invisible':[('standard_price_write_uid','=',False)]}">
                    <field name="standard_price_write_date" nolabel="1" readonly="1"/> by <field name="standard_price_write_uid" nolabel="1" readonly="1"/>
                </div>
            </div>
            <field name="uom_id" position="before">
                <separator string="Unit of Measure" colspan="2"/>
            </field>
        </field>
    </record>

</odoo>
