<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="before">
                <separator string="Sell price" colspan="2"/>
            </field>
            <field name="list_price" position="after">
                <field name="pricelist_bypass" attrs="{'invisible':[('sale_ok','!=',True)]}"/>
                <field name="pricelist_bypass_item" attrs="{'invisible':[('sale_ok','!=',True), ('pricelist_bypass','!=',True)]}" groups="base.group_erp_manager"/>
                <field name="default_sell_price" attrs="{'invisible':[('sale_ok','!=',True)]}"/>
                <field name="price_write_date" string="Edit date" readonly="1" groups="base.group_erp_manager"/>
                <field name="price_write_uid" string="Editor" readonly="1" groups="base.group_erp_manager"/>
            </field>
            <label for="standard_price" position="before">
                <separator string="Cost price and purchase price" colspan="2"/>
            </label>
            <div name="standard_price_uom" position="after">
                <field name="default_purchase_price" attrs="{'invisible':[('purchase_ok','!=',True)]}" />
                <field name="standard_price_write_date" string="Edit date" readonly="1" groups="base.group_erp_manager"/>
                <field name="standard_price_write_uid" string="Editor" readonly="1" groups="base.group_erp_manager"/>
            </div>
            <field name="uom_id" position="before">
                <separator string="Unit of Measure" colspan="2"/>
            </field>
        </field>
    </record>

</odoo>
