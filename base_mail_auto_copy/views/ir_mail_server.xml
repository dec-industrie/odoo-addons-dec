        <field name="model">ir.mail_server</field>
        <field name="inherit_id" ref="base.ir_mail_server_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group string="Auto Copy" colspan="4">
                    <field name="auto_add_sender"/>
                    <field name="auto_cc_addresses"/>
                    <field name="auto_bcc_addresses"/>
                </group>
            </sheet>
        </field>
    </record>

